{
  "name": "osxreader",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "build": "npm run client:build && npm run server:build",
    "client:build": "vite build",
    "server:build": "tsc",
    "clean": "rm -rf dist",
    "prestart": "npm run clean && npm run build",
    "start:backend": "NODE_OPTIONS='--trace-warnings --trace-uncaught --trace-exit --trace-sigint --stack-trace-limit=100' node --import tsx src/server.ts",
    "start": "concurrently \"npm run start:backend\" \"wait-on http://localhost:3000 && open http://localhost:3000\"",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec \"node --import tsx\" src/server.ts",
    "client:dev": "vite",
    "lint": "eslint .",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "jest --config jest.config.mjs",
    "test:frontend": "vitest run",
    "test:watch": "npm run test:backend:watch & npm run test:frontend:watch",
    "test:backend:watch": "jest --config jest.config.mjs --watch",
    "test:frontend:watch": "vitest",
    "test:coverage": "npm run test:backend:coverage && npm run test:frontend:coverage",
    "test:backend:coverage": "jest --config jest.config.mjs --coverage",
    "test:frontend:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:ci": "npm run test:backend:coverage && npm run test:frontend:coverage && npm run test:e2e"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "jest": "^30.1.3",
    "jsdom": "^27.0.0",
    "nodemon": "^3.1.0",
    "playwright": "^1.55.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.4.5",
    "vite": "^4.4.0",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@pinata/sdk": "^2.1.0",
    "@polkadot/api": "^12.0.1",
    "@polkadot/types": "^12.0.1",
    "@polkadot/util": "^13.5.6",
    "@polkadot/util-crypto": "^13.5.6",
    "@walletconnect/qrcode-modal": "^1.8.0",
    "@walletconnect/sign-client": "^2.21.10",
    "better-sqlite3": "^8.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "ethers": "^6.15.0",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.2",
    "uuid": "^13.0.0",
    "ws": "^8.17.0",
    "zod": "^4.1.11"
  }
}
