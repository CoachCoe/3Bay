{
  "name": "osxreader",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "build": "npm run client:build && npm run server:build",
    "client:build": "vite build",
    "server:build": "tsc",
    "clean": "rm -rf dist",
    "prestart": "npm run clean && npm run build",
    "start:backend": "NODE_OPTIONS='--trace-warnings --trace-uncaught --trace-exit --trace-sigint --stack-trace-limit=100' node --import tsx src/server.ts",
    "start": "concurrently \"npm run start:backend\" \"wait-on http://localhost:3000 && open http://localhost:3000\"",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec \"node --import tsx\" src/server.ts",
    "client:dev": "vite",
    "lint": "eslint ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.4",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.4.5",
    "vite": "^4.4.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@polkadot/api": "^12.0.1",
    "@polkadot/types": "^12.0.1",
    "@types/qrcode": "^1.5.5",
    "better-sqlite3": "^8.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "nfc-pcsc": "^0.8.1",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.2",
    "uuid": "^13.0.0",
    "ws": "^8.17.0",
    "zod": "^4.1.11"
  }
}
