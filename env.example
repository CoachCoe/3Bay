# Environment Configuration
NODE_ENV=development
PORT=3000

# Security
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# NFC Configuration
NFC_AID=F2222222222222

# Payment Configuration
RECIPIENT_ADDRESS=your-polkadot-address-here

# Database (Optional)
DATABASE_URL=sqlite:./data/payment-terminal.db
REDIS_URL=redis://localhost:6379

# Polkadot RPC Endpoints (Optional - defaults to public endpoints)
POLKADOT_RPC_URL=https://polkadot-rpc.polkadot.io
KUSAMA_RPC_URL=https://kusama-rpc.polkadot.io
MOONRIVER_RPC_URL=https://rpc.api.moonriver.moonbeam.network
SHIDEN_RPC_URL=https://rpc.shiden.astar.network
